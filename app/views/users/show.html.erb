<%#= link_to '首頁', books_path %>

<% if current_user == @user %>
<p><%= link_to '新增書籍', new_book_path %></p>
<% end %>

<% @user.books.each do |t| %>
	<% if t.logo.exists? %> 
		<%= link_to image_tag( t.logo.url(:thumb) ), t.logo.url %>
	<% end %>

	<%= t.title %>
	<%= t.isbn %>
	<%= t.author %>
	<%= t.description %>
	<%= link_to '刪除此書', book_path(t), :method => :delete %>
	<%= link_to '編輯此書', edit_book_path(t) %>
	<%= link_to '留下記錄', book_path(t) %>
	</br>
<% end %>